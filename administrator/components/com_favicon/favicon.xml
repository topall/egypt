	<authorEmail>favicon@richeyweb.com</authorEmail>
	<authorUrl>www.richeyweb.com</authorUrl>
	<version>2.0.0</version>
	<description>COM_FAVICON_XML_DESC</description>
	<media folder="media" destination="com_favicon">
		<folder>assets</folder>
		<folder>icons</folder>
		<folder>temp</folder>
	</media>
	<administration>
		<menu img="../media/com_favicon/assets/images/favicon16.png">COM_FAVICON</menu>
		<files folder="admin">
			<filename>favicon.php</filename>
			<filename>controller.php</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>views</folder>
			<folder>controllers</folder>
		</files>
		<languages folder="language">
			<language tag="en-GB">en-GB/en-GB.com_favicon.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_favicon.sys.ini</language>
		</languages>
	</administration>
</extension>
