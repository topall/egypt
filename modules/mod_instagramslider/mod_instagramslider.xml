<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>Instagram Widget Slider</name>
	<author>Alonzo Weatherby</author>
	<creationDate>June 2013</creationDate>
	<copyright>Copyright (C)2013 forkliftcertification.us</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>widgets@forkliftcertification.us</authorEmail>
	<authorUrl>www.forkliftcertification.us</authorUrl>
	<version>1.1</version>
	<description>Thanks for installing LinkedIn Widget Slider.</description>
	<files>
		<folder>assets</folder>
		<folder>tmpl</folder>
		<filename module="mod_instagramslider">mod_instagramslider.php</filename>
		<filename>index.html</filename>
		<filename>mod_instagramslider.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_instagramslider.ini</language>
		<language tag="en-GB">en-GB.mod_instagramslider.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="instagram_id"
					type="url"
					default="https://www.instagram.com/p/BA_B2mcKxPT"					
					label="Instrgram URL"
					description="MOD_INSTAGRAM_ID_DESC" />
				<field 
					name="margintop"
					type="text"
					default="50"
					label="MOD_INSTAGRAM_SLIDER_MARGIN" 
					description="MOD_INSTAGRAM_SLIDER_MARGIN_DESC" />
				<field 
					name="iwidth"
					type="text"
					default="340"
					label="MOD_INSTAGRAM_SLIDER_WIDTH" 
					description="MOD_INSTAGRAM_SLIDER_WIDTH_DESC" />
				<field 
					name="iheight"
					type="text"
					default="220"
					label="MOD_INSTAGRAM_SLIDER_HEIGHT" 
					description="MOD_INSTAGRAM_SLIDER_HEIGHT_DESC" />
				
		

				<field
					name="position"
					type="radio"
					class="btn-group"
					default="left"
					label="Position"
					description="Position">
					<option value="left">Left</option>
					<option value="right">Right</option>
				</field>	
				 <field type="spacer" name="myspacer" label="Note: If you are using Joomla 2.5 or your site not loading jQuery yet - You might like to put that option as Yes to load jQuery" />			
				<field
					name="loadjquery"
					type="radio"
					class="btn-group"
					default="0"
					label="MOD_INSTAGRAM_SLIDER_JQUERY"
					description="MOD_INSTAGRAM_SLIDER_JQUERY_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>	

			</fieldset>

			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					default=""
					label="MOD_INSTAGRAM_SLIDER_MODULE_CLASS"
					description="MOD_INSTAGRAM_SLIDER_MODULE_CLASS_DESC" />

			</fieldset>
		</fields>
	</config>
</extension>
