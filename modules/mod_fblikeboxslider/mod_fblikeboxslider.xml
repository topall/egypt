<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name> Facebook Like Box Slider</name>
	<author>Shahedur Rahman</author>
	<creationDate>June 2014</creationDate>
	<copyright>All rights reserved by JoomExperts.COM.</copyright>
	<authorEmail>shahed@joomexperts.com</authorEmail>
	<authorUrl>www.joomexperts.com</authorUrl>
	<version>1.0</version>
	<description>Thanks for installing Facebook Like Box Slider</description>
	<files>
		<folder>css</folder>
		<folder>images</folder>
		<folder>tmpl</folder>
		  <filename>helper.php</filename>
		<filename module="mod_fblikeboxslider">mod_fblikeboxslider.php</filename>
		<filename>index.html</filename>
		<filename>mod_fblikeboxslider.xml</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="facebook_name"
					type="url"
					default="https://www.facebook.com/FacebookDevelopers"
					label="Facebook Page URL"
					description="Facebook Page URL" />

				<field name="align"
					 type="radio"
					 class="btn-group"
					 default="left" 
					 label="Select an Align" 
					 description="">
				  <option value="left">Left</option>
				  <option value="right">Right</option>
  				  
				</field>	

				<field
					name="face"
					type="radio"
					class="btn-group"
					default="yes"
					label="Show Faces"
					description="Show Faces">
					<option value="yes">Yes</option>
					<option value="no">No</option>
				</field>
					
				<field
					name="stream"
					type="radio"
					class="btn-group"
					default="no"
					label="Show Stream"
					description=" Show Stream">
					<option value="yes">Yes</option>
					<option value="no">No</option>
				</field>
				
				<field
					name="show_header"
					type="radio"
					class="btn-group"
					default="yes"
					label="Show Header"
					description="Show Header">
					<option value="yes">Yes</option>
					<option value="no">No</option>
				</field>

				<field
					name="show_border"
					type="radio"
					class="btn-group"
					default="yes"
					label="Show Border"
					description="Show Border">
					<option value="yes">Yes</option>
					<option value="no">No</option>
				</field>

				<field
					name="color_schem"
					type="radio"
					class="btn-group"
					default="light"
					label="Color Scheme"
					description="Color Scheme">
					<option value="dark">Dark</option>
					<option value="light">Light</option>
				</field>
				
								

				<field 
					name="margintop"
					type="text"
					default="110"
					label="Margin Top" 
					description="Margin Top to Bottom" />				
				
				<field 
					name="facebook_width"
					type="text"
					default="300"
					label="Facebook Width"
					description="Facebook Width" />
				<field 
					name="facebook_height"
					type="text"
					default="350"
					label="Facebook Height"
					description="Facebook Height" />
				
				<field type="spacer" name="myspacer" label="Note: If you are using Joomla 2.5 or your site not loading jQuery yet - You might like to put that option as Yes to load jQuery" />
			

				<field
					name="jquery"
					type="radio"
					class="btn-group"
					default="0"
					label="Jquery Load"
					description="Jquery Load">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>	

					
				
		
			</fieldset>

			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					default=""
					label="Module Class Suffix"
					description="MOD_AWESOME_FACEBOOK_CLASS_DESC" />
				<field
					name="loadjquery"
					type="radio"
					default="1"
					label="Load Jquery"
					description="MOD_AWESOME_FACEBOOK_JQUERY_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
