<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" method="upgrade" client="site">
	<name>test</name>
	<version>1.0.1</version>
	<creationDate>Nov 9th, 2018</creationDate>
	<author>JoomlArt.com</author>
	<authorEmail>webmaster@joomlart.com</authorEmail>
	<authorUrl>http://www.t3-framework.org</authorUrl>
	<copyright>Copyright (C), J.O.O.M Solutions Co., Ltd. All Rights Reserved.</copyright>
	<license>license GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<t3>
		<base>base-bs3</base>
	</t3>
	<description>
		<![CDATA[
		<div align="center">
			<div class="alert alert-success" style="background-color:#DFF0D8;border-color:#D6E9C6;color: #468847;padding: 1px 0;">
				
				<h3><a href="//www.joomlart.com/joomla/templates/ja-mason">Joomla template for Company and Business websites - JA Mason</a></h3>
				
				<h4><a href="//www.joomlart.com/joomla/templates/ja-mason" title="">Home</a> | <a href="//joomlart.com/demo/#ja_mason" title="">Demo</a> | <a href="http://www.joomlart.com/documentation/joomla-templates/ja-mason" title="">Document</a> | <a href="//pm.joomlart.com/browse/JATCMASON" title="">Changelog</a></h4>

				<p>Joomla template for Company and Business websites with creative and modern design. JA Mason comes with light and dark theme, vertical and horizontal menu style, flexible layout system and number of beautiful pre-made pages: Projects, Blog, Contact. The template also supports all Joomla default pages.</p>

				<span style="color:#FF0000">Note: T3 blank requires T3 plugin to be installed and enabled.</span><p></p>
				<p>Copyright 2004 - 2018 <a href='http://www.joomlart.com/' title='Visit Joomlart.com!'>JoomlArt.com</a>.</p>
			</div>
			<style>table.adminform{width: 100%;}</style>
		</div>
		]]>
	</description>
	<files>
		<filename>offline.php</filename>
		<filename>error.php</filename>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>thememagic.xml</filename>
		<filename>templateInfo.php</filename>
		<filename>templateHook.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
		<folder>acm</folder>
		<folder>etc</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>css</folder>
		<folder>js</folder>
		<folder>less</folder>
		<folder>language</folder>
		<folder>images</folder>
		<folder>tpls</folder>
	</files>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_test.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_test.sys.ini</language>
	</languages>

	<positions>
		<position>languageswitcherload</position>
		<position>bottom-vertical</position>
		<position>footer</position>
		<position>head-search</position>
		<position>masthead</position>
		<position>off-canvas</position>
		<position>section-bottom</position>
		<position>section-top</position>
		<position>sidebar-1</position>
		<position>sidebar-2</position>
		<position>slideshow</position>
		<position>debug</position>
	</positions>

	<config>
		<fields name="params" addfieldpath="/plugins/system/t3/includes/depend">
			<fieldset name="theme_params" label="T3_THEME_LABEL" description="T3_THEME_DESC">
				<field name="logo-vertical" type="media"
				 label="T3_THEME_LOGO_VERTICAL"
				 description="T3_THEME_LOGO_VERTICAL_DESC"></field>

				 <field name="nav-type" type="radio" class="t3onoff" default="0"
				 label="T3_THEME_NAV_VERTICAL"
				 description="T3_THEME_NAV_VERTICAL_DESC">
				 	<option value="0" class="off">JNO</option>
					<option value="1" class="on">JYES</option>
				</field>

				<field name="enable-effect" type="radio" class="t3onoff" default="0"
				 label="T3_THEME_ENABLE_EFFECT"
				 description="T3_THEME_ENABLE_EFFECT_DESC">
				 	<option value="0" class="off">JNO</option>
					<option value="1" class="on">JYES</option>
				</field>
			</fieldset>

			<!-- Sample for add or disable template parameters -->
			<!--fieldset name="menu_params" label="T3_PARAMS_MEGAMENU">
				<field name="group_disable" type="t3depend" function="@group">
					<option for="menu_as_bg" value="no">menu_as_bg</option>
				</field>
			</fieldset-->
			
		</fields>
	</config>

	<updateservers>
    	<server type="extension">http://update.joomlart.com/service/tracking/j31/ja_mason.xml</server>
	</updateservers>

</extension>
