<?xml version="1.0" encoding="utf-8"?>
<form>
  <title>Slideshow Style 1</title>
  <sampledata></sampledata>

	<fields name="slideshow">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			<field name="auto-play" type="list" label="ACM_AUTO_PLAY_LABEL" description="ACM_AUTO_PLAY_DESC" default="false">
				<option value="false">JNO</option>
				<option value="true">JYES</option>
			</field>
		</fieldset>		

		<fieldset name="basic2" label="SLIDESHOW_BASIC_2_LABEL" description="SLIDESHOW_BASIC_2_DESC">
			<field name="data" type="jalist">
				<item name="title" type="text" 
					description="SLIDESHOW_TITLE_DES"
					label="SLIDESHOW_TITLE"
					default=""
					/>

				<item name="btn-title" type="text" 
					description="SLIDESHOW_BUTTON_TITLE_DES"
					label="SLIDESHOW_BUTTON_TITLE"
					default=""
					/>

				<item name="btn-link" type="text" 
					description="SLIDESHOW_BUTTON_LINK_DES"
					label="SLIDESHOW_BUTTON_LINK"
					default=""
					/>
	
				<item name="image" type="media" 
					description="SLIDESHOW_IMG_DES"
					label="SLIDESHOW_IMG_TITLE"
					default=""
					/>
			</field>
		</fieldset>
	</fields>
</form>